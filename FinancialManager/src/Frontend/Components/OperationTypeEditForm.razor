@if (Model is null)
{
    <p><em>Loading...</em></p>
    return;
}

<EditForm @ref="_form" Model="Model" OnValidSubmit="Submit">
    <label for="Name" class="form-label">Name</label>
    <div class="col-md-4">
        <InputText class="form-control" @bind-Value="Model.Name" />
    </div>
    <label for="IsIncome" class="form-label">Is income?</label>
    <div class="col-md-4">
        <InputCheckbox class="form-check" @bind-Value="Model.IsIncome" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-light" @onclick="Back">Cancel</button>
    </div>
</EditForm>